%h1 All Albums

%table#albums
    %thead 
        %tr
            %th Artist 
            %th Album Title
            %th Total Runtime
            %th Release Date
            %th Label
            %th Genre
    %tbody
        %tr
            // %td= 'artist name'
            %td= @album.artist.name
            %td= @album.name
            %td= @album.total_time
            %td= @album.release_date
            %td= @album.label
            // %td= 'genre'
            %td= @album.genre.name
